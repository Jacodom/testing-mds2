{
  "name": "testing-examples",
  "version": "1.0.0",
  "description": "Repositorio de ejemplos para ense√±ar unit testing e integration testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "npx playwright test --project=integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:playwright-all": "npx playwright test",
    "test:watch": "jest --watch --testPathPattern=unit",
    "report": "allure generate allure-results --clean && allure open",
    "coverage": "npm run test:unit && open coverage/lcov-report/index.html"
  },
  "keywords": ["testing", "unit-testing", "integration-testing", "playwright", "jest", "typescript"],
  "author": "UTN",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "allure-jest": "^2.15.0",
    "allure-playwright": "^2.15.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
